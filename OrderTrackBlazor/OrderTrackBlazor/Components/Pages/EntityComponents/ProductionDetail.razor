@inherits ProductionDetailComponent
@if (Production != null)
{
  <Card>
    <BodyTemplate>
      <div class="row g-3">
        <div class="col-12">
          <BootstrapInput @bind-Value="Production.ProductionName" DisplayText="商品名" ShowLabel="true"></BootstrapInput>
        </div>
        <div class="col-12">
          <BootstrapInputNumber @bind-Value="Production.OriginalPrice" DisplayText="原始价格" ShowLabel="true"></BootstrapInputNumber>
        </div>
        <div class="col-12">
          <BootstrapInput @bind-Value="Production.ExtendUrl" DisplayText="外部连接" ShowLabel="true"></BootstrapInput>
        </div>
        <div class="col-12">
          <InputUpload TValue="string" ShowDeleteButton="true" OnChange="@OnFileChange" ShowLabel="true" OnDelete="@OnFileDelete" DisplayText="产品图片"></InputUpload>
        </div>
        <div class="col-12">
          @filesize
        </div>
        <div class="col-12">
          <img src="@Production.Attachment" />
        </div>
      </div>
    </BodyTemplate>
  </Card>
}

@* OnChange="@OnFileChange" OnDelete="@OnFileDelete" *@
