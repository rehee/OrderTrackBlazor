@page "/entity/shop"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inherits ShopPageComponent



@if (Shops == null)
{
  <div>null</div>
}
else
{
  <div>
    <Button Color="Color.Primary" Text="添加shop" OnClick="()=>NormalShowDialog()" />
  </div>
  <div>
    <Table TItem="OrderTrackShop" Items="@Shops">
      <TableColumns>
        <TableColumn @bind-Field="@context.ShopType" />
        <TableColumn @bind-Field="@context.ShopName" />
        <TableColumn @bind-Field="@context.PostCode" />
        <TableColumn @bind-Field="@context.Note" />
        <TableColumn @bind-Field="@context.DisplayOrder" />
        <TableColumn @bind-Field="@context.Id">
          <Template Context="value">
            <Button Color="Color.Success" Text="修改" OnClick="()=>NormalShowDialog(value.Value)" />
          </Template>
        </TableColumn>

      </TableColumns>
    </Table>
  </div>
  <Dialog></Dialog>
}